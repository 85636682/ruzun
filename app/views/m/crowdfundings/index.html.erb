<div class="mdui-container-fluid">
    <div class="mdui-row">
        <div class="mdui-col-xs-4">
            <%= image_tag("bluefairy2.jpg", width: 80, height: 80, style: "margin: 5px;") %>
        </div>
        <div class="mdui-col-xs-8">
            <p class="mdui-valign mdui-center">一张图读懂</p>
            <p class="mdui-valign mdui-center">蓝精灵升级俱乐部众筹</p>
        </div>
    </div>
    <div class="mdui-divider"></div>
    <% @crowdfundings.each do |crowdfunding| %>
    <div class="mdui-row">
        <div class="mdui-col-xs-3" style="text-align:center;">
            <span>支持</span>
            <span style=""><%= crowdfunding.fee %></span>
            <span>元</span>
        </div>
        <div class="mdui-col-xs-9" style="padding: 10px;">
            <%= raw crowdfunding.desc %>
        </div>
    </div>
    <div class="mdui-divider"></div>
    <% end %>
</div>