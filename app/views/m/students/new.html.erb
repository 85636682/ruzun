<%= render './m/shared/header', :locals => { title: "报名培训班" } %>
<div class="flex-center">
  <div class="container-wider">
  <%= form_for [:m, @lesson, @student] do |f| %>
    <div class="row">
      <div class="col s12">
        <div class="card-panel teal">
          <span class="white-text">
            <%= @lesson.subject %>
          </span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :name, class: "validate" %>
        <label for="email">名字</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :phone, class: "validate" %>
        <label for="email">电话</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :height, class: "validate" %>
        <label for="email">身高</label>
      </div>
      <div class="input-field col s6">
        <%= f.text_field :age, class: "validate" %>
        <label for="email">年龄</label>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <%= f.submit "确认报名", class: "btn btn-block" %>
      </div>
    </div>
    <% end %>
  </div>
</div>