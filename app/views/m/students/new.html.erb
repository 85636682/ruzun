<%= render './m/shared/header', :locals => { title: "报名培训班" } %>
<div class="container-fluid">
  <div class="well bs-component" style="margin-top: 80px;">
    <%= form_for [:m, @lesson, @student], { :html => { class: "form-horizontal" } } do |f| %>
      <fieldset>
        <legend><%= @lesson.subject %> - 报名表格</legend>
        <div class="form-group">
          <label for="inputEmail" class="col-md-2 control-label">学员名字</label>
          <div class="col-md-10">
            <%= f.text_field :name, class: "form-control", placeholder: "" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail" class="col-md-2 control-label">联系电话</label>
          <div class="col-md-10">
            <%= f.text_field :phone, class: "form-control", placeholder: "" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail" class="col-md-2 control-label">学员身高</label>
          <div class="col-md-10">
            <%= f.text_field :height, class: "form-control", placeholder: "" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail" class="col-md-2 control-label">学员年龄</label>
          <div class="col-md-10">
            <%= f.text_field :age, class: "form-control", placeholder: "" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-10 col-md-offset-2">
            <%= f.submit "确认报名", class: "btn btn-raised btn-primary" %>
          </div>
        </div>
      </fieldset>    
    <% end %>
  </div>
</div>