<div class="mdui-container">
  <ul class="list-unstyled">
    <% @lessons.each do |lesson| %>
    <li>
      <div class="ticket-wrapper">
        <a href="<%= m_lesson_path(lesson) %>">
          <div class="ticket-logo">
            <%= image_tag("family-ticket.jpg") %>
          </div>
        </a>
        <div class="ticket-info">
          <a href="<%= m_lesson_path(lesson) %>">
            <div class="subject"><%= lesson.subject %></div>
            <div class="summary"><%= lesson.summary %></div>
          </a>
          <div class="sale">
            <div class="price">
              <span>￥<%= lesson.price %></span>
            </div>
            <div class="buy">
              <%= link_to "报名", new_m_lesson_student_path(lesson), class: "mdui-btn mdui-color-pink-accent mdui-ripple" %>
            </div>
          </div>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>