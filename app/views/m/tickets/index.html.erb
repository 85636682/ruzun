<%= render './m/shared/header' %>
<div class="flex-center">
  <div class="container-wider">
    <ul class="unstyle">
        <li>
            <div class="ticket-wrapper">
                <div class="ticket-logo">
                    <%= image_tag("family-ticket.jpg") %>
                </div>
                <div class="ticket-info">
                    <div class="subject">水上乐园单人票</div>
                    <div class="sale">
                        <div class="price">
                            <span>￥23</span>
                        </div>
                        <div class="buy">
                            <%= link_to "加入购物车", add_m_shopping_carts_path(ticket_id: 1), class: "btn btn-danger" %>
                        </div>
                    </div>
                </div>
            </div>
        </li>
        <% @tickets.each do |ticket| %>
        <li>
            <div>
                <%= ticket.name %>
                <%= ticket.price %>
            </div>
        </li>
        <% end %>
    </ul>
  </div>
</div>