<div class="mdui-container-fluid" style="background-color: #FFF4D2;">
  <div class="wrapper">
    <div class="bg rotate"></div>
    <div class="open-has ">
      <h3 class="title-close"><span class="user"></span></h3>

      <div class="mod-chest">
        
        <div class="chest-close show ">
          <div class="gift"></div>
          <div class="tips">
            <i class="arrow"></i>
          </div>
        </div>
        <div class="chest-open ">
          <div class="mod-chest-cont open-cont">
            <div class="content">
              <div class="gift">
                <div class="icon">
                  <%= image_tag("draw/chest-icon-zuan.png") %>
                </div>
                 x 500 
              </div>
              <div class="func">
                <button class="mdui-btn mdui-btn-block mdui-color-red-accent mdui-ripple">查看详情并提取</button>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
    <div class="open-none" style="display:none">
      <h3>你来晚啦，下次早点吧！</h3>
      <div class="mod-chest">
        <div class="chest-open show"></div>
      </div>
      <div class="func">
        <button class="chest-btn">查看领取详情</button>
      </div>
    </div>
    
  </div>
</div>
<script type="text/javascript">
  $(".chest-close").click(function(){

    $(this).addClass("shake");
    var that=this;
    
    this.addEventListener("webkitAnimationEnd", function(){
      
      $(that).closest(".open-has").addClass("opened");
      setTimeout(function(){
        $(that).removeClass("show");
        $(that).closest(".mod-chest").find(".chest-open").addClass("show");
        setTimeout(function(){
          $(".chest-open").addClass("blur");
        },500)
      },200)
    }, false);
  })
</script>