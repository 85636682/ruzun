<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @game.name %>积分管理</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">

      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <%= form_for [:admin, @game, @game_team] do |f| %>
          <div class="form-group">
            <label>胜局数量：</label>
            <%= f.text_field :wins %>
          </div>
          <div class="form-group">
            <label>败局数量：</label>
            <%= f.text_field :losses %>
          </div>
          <div class="form-group">
            <label>积分：</label>
            <%= f.text_field :points %>
          </div>
          <div class="form-group">
            <label>净胜分：</label>
            <%= f.text_field :score_difference %>
          </div>
          <%= f.submit "保存", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
