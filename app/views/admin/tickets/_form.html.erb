<%= form_for [:admin, @ticket], html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">门票名称</label>
        <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", placeholder: "门票名称" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">门票价格</label>
        <div class="col-sm-10">
            <%= f.number_field :price, class: "form-control", placeholder: "门票价格" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">门票简介</label>
        <div class="col-sm-10">
            <%= f.text_field :summary, class: "form-control", placeholder: "门票简介" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">保存</button>
        </div>
    </div>
<% end %>