<%= form_for [:admin, @membership_card], html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">会员卡名称</label>
        <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", placeholder: "会员卡名称" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">会员卡价格</label>
        <div class="col-sm-10">
            <%= f.number_field :fee, class: "form-control", placeholder: "会员卡价格" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">使用次数</label>
        <div class="col-sm-10">
            <%= f.number_field :count, class: "form-control", placeholder: "使用次数" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">会员卡简介</label>
        <div class="col-sm-10">
            <%= f.text_field :summary, class: "form-control", placeholder: "会员卡简介" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">保存</button>
        </div>
    </div>
<% end %>