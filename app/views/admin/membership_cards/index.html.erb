<div class="card">
  <div class="card-body card-padding">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>会员卡名称</th>
                <th>会员卡价格</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        <% @membership_cards.each do |membership_card| %>
            <tr>
                <th scope="row"><%= membership_card.id %></th>
                <td><%= membership_card.name %></td>
                <td><%= membership_card.fee %></td>
                <td>
                    <%= link_to "查看", admin_membership_card_user_membership_cards_path(membership_card) %>
                    <%= link_to "修改", edit_admin_membership_card_path(membership_card) %>
                    <%= link_to '删除', admin_membership_card_path(membership_card), method: :delete %>
                </td>
            </tr>
        <% end %>
    </table>
  </div>
</div>