<div class="card">
  <div class="card-body card-padding">
    <%= form_for [:admin, @membership_card, @user_membership_card], html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">会员卡状态</label>
        <div class="col-sm-10">
            <% UserMembershipCard.statuses.each do |key, value| %>
            <label class="radio-inline">
                <%= f.radio_button :status, key %> <%= key %>
            </label>
            <% end %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">会员卡使用次数</label>
        <div class="col-sm-10">
            <%= f.text_field :count, class: "form-control", placeholder: "会员卡使用次数" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">保存</button>
        </div>
    </div>
    <% end %>
  </div>
</div>
