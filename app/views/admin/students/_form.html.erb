<%= form_for [:admin, @student], html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">报班日期</label>
        <div class="col-sm-10">
            <% Lesson.all.each do |lesson| %>
            <label class="radio-inline">
                <%= f.radio_button :lesson_id, lesson.id, class: "student-lesson" %> <%= lesson.subject %>
            </label>
            <% end %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">报班日期</label>
        <div class="col-sm-10" id="daylines">
            <%= image_tag("loading.gif", width: "20px", height: "20px", class: "loading", style: "display:none;margin-top:7px;") %>
            <% if not @student.lesson.blank? %>
                <% @student.lesson.daylines.where(enabled: true).each do |dayline| %>
                <label class="radio-inline">
                    <%= f.radio_button :dayline_id, dayline.id, class: "student-dayline" %> <%= dayline.subject %>
                </label>
                <% end %>
            <% end %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">报班时间</label>
        <div class="col-sm-10" id="timelines">
            <%= image_tag("loading.gif", width: "20px", height: "20px", class: "loading", style: "display:none;margin-top:7px;") %>
            <% if not @student.lesson.blank? %>
                <% @student.lesson.timelines.where(enabled: true).each do |timeline| %>
                <label class="radio-inline">
                    <%= f.radio_button :timeline_id, timeline.id, class: "student-timeline" %> <%= timeline.subject %>
                </label>
                <% end %>
            <% end %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">学生名称</label>
        <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", placeholder: "学生名称" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">联系电话</label>
        <div class="col-sm-10">
            <%= f.number_field :phone, class: "form-control", placeholder: "联系电话" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">学生年龄</label>
        <div class="col-sm-10">
            <%= f.number_field :age, class: "form-control", placeholder: "年龄" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">学生身高</label>
        <div class="col-sm-10">
            <%= f.number_field :height, class: "form-control", placeholder: "身高" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">备注</label>
        <div class="col-sm-10">
            <%= f.text_field :remark, class: "form-control", placeholder: "备注" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">状态</label>
        <div class="col-sm-10">
            <% Student.statuses.each do |key, value| %>
            <label class="radio-inline">
                <%= f.radio_button :status, key %> <%= key %>
            </label>
            <% end %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">实收款</label>
        <div class="col-sm-10">
            <%= f.number_field :paid_in, class: "form-control", placeholder: "实收款" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">保存</button>
        </div>
    </div>
<% end %>