<%= form_for [:admin, @lesson, @student], html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">报班</label>
        <div class="col-sm-10">
            <% @lesson.timelines.all.each do |timeline| %>
            <label class="radio-inline">
                <%= f.radio_button :timeline_id, timeline.id %> <%= timeline.subject %>
            </label>
            <% end %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">学生名称</label>
        <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", placeholder: "学生名称" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">联系电话</label>
        <div class="col-sm-10">
            <%= f.number_field :phone, class: "form-control", placeholder: "联系电话" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">学生年龄</label>
        <div class="col-sm-10">
            <%= f.number_field :age, class: "form-control", placeholder: "年龄" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">学生身高</label>
        <div class="col-sm-10">
            <%= f.number_field :height, class: "form-control", placeholder: "身高" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">备注</label>
        <div class="col-sm-10">
            <%= f.text_field :remark, class: "form-control", placeholder: "备注" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">保存</button>
        </div>
    </div>
<% end %>