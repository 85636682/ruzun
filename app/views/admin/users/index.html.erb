<div class="card">
  <div class="card-body card-padding">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>名称</th>
                <th>昵称</th>
                <th>电话</th>
                <th>性别</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
            <tr>
                <th scope="row"><%= user.id %></th>
                <td><%= user.name %></td>
                <td><%= user.nickname %></td>
                <td><%= user.mobile %></td>
                <td><%= user.sex %></td>
                <td>
                    <%= link_to "修改", edit_admin_user_path(user) %>
                </td>
            </tr>
        <% end %>
    </table>
  </div>
</div>