<div class="card">
  <div class="card-body card-padding">
    <table class="table">
        <thead>
            <tr>
                <th>订单编号</th>
                <th>订单总价</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
            <tr>
                <th scope="row"><%= order.sn %></th>
                <td><%= order.total_price %></td>
                <td>
                    <%= i18n_enum order, :status %>
                </td>
                <td>
                    <%= link_to "查看", admin_order_path(order) %>
                    <%= link_to '删除', admin_order_path(order), method: :delete %>
                </td>
            </tr>
        <% end %>
    </table>
  </div>
</div>