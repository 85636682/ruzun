<%= form_for [:admin, @locker], html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">储物柜编号</label>
        <div class="col-sm-10">
            <%= f.text_field :serial_number, class: "form-control", placeholder: "名称" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">状态</label>
        <div class="col-sm-10">
            <% Locker.states.each do |key, value| %>
            <label class="radio-inline">
                <%= f.radio_button :state, key %> <%= key %>
            </label>
            <% end %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">保存</button>
        </div>
    </div>
<% end %>