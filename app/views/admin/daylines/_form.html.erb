<%= form_for [:admin, @dayline], html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">时间段</label>
        <div class="col-sm-10">
            <%= f.text_field :subject, class: "form-control", placeholder: "时间段" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">所属培训班</label>
        <div class="col-sm-10">
            <% Lesson.all.each do |lesson| %>
            <label class="radio-inline">
                <%= f.radio_button :lesson_id, lesson.id %> <%= lesson.subject %>
            </label>
            <% end %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">保存</button>
        </div>
    </div>
<% end %>