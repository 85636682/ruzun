<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">技术统计</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= @played.home_team.name %> vs <%= @played.guest_team.name %>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body stats_table">
        <table>
          <thead>
            <tr>
              <th>得分</th>
              <th>篮板</th>
              <th>助攻</th>
              <th>投篮</th>
              <th>三分</th>
              <th>罚球</th>
              <th>前场板</th>
              <th>后场板</th>
              <th>抢断</th>
              <th>盖帽</th>
              <th>失误</th>
              <th>犯规</th>
            </tr>
          </thead>
        </table>
        <div class="stats_content">
          <% @techstats.each do |techstat| %>
            <div class="members">
              <%= techstat.user.name %>
            </div>
            <div class="stats">
              <div class="">
                <%= techstat.pts %>
              </div>
              <div class="">
              	<%= techstat.ast %>
              </div>
              <div class="">
                <%= techstat.stl %>
              </div>
              <div class="">
                <%= techstat.blk %>
              </div>
              <div class="">
                <%= techstat.off %>
              </div>
              <div class="">
                <%= techstat.reb %>
              </div>
              <div class="">
                <%= techstat.pm3 %>
              </div>
              <div class="">
                <%= techstat.pm3_a %>
              </div>
              <div class="">
                <%= techstat.ftm %>
              </div>
              <div class="">
                <%= techstat.ftm_a %>
              </div>
              <div class="">
                <%= techstat.fgm %>
              </div>
              <div class="">
                <%= techstat.fgm_a %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
