<%= form_for [:admin, @crowdfunding], html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">众筹项目</label>
        <div class="col-sm-10">
            <%= f.text_field :subject, class: "form-control", placeholder: "众筹项目" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">费用</label>
        <div class="col-sm-10">
            <%= f.number_field :fee, class: "form-control", placeholder: "费用" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">描述</label>
        <div class="col-sm-10">
            <%= f.text_field :desc, class: "form-control", placeholder: "描述" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">保存</button>
        </div>
    </div>
<% end %>